ALGORITHM problem1sol2
VAR
    htab1: HASH_TABLE<INTEGER,INTEGER>;
    htab2: HASH_TABLE<INTEGER,INTEGER>;
    sum: INTEGER;
    i,j,hatb1len,hatb2len,value:INTEGER;

BEGIN
    sum:=0;
    // fill htab1
    Write("Enter the lenght of the first set: ");
    READ(hatb1len);
    FOR i FROM 0 TO hatb1len-1 STEP 1  DO
        Write("give the element in index",i);
        READ(value);
        htab1.insert(i,value);
    END_FOR

    // fill htab2
    Write("Enter the lenght of the second set: ");
    READ(hatb2len);
    FOR i FROM 0 TO hatb2len-1 STEP 1  DO
        Write("give the element in index",i);
        READ(value);
        htab2.insert(i,value);
    END_FOR

     //lets calculate the sum of distincts elements of given sets
    
    FOR i FROM 0 TO hatb1len-1 STEP 1  DO
        FOR j FROM 0 TO hatb2len-1 STEP 1  DO
            IF (htab1.get(i)=htab2.get(j)) THEN
                BREAK;
            END_IF
        END_FOR
        IF (j=hatb2len) THEN
            sum:=sum+htab1.get(i);
        END_IF
    END_FOR

    FOR i FROM 0 TO hatb2len-1 STEP 1  DO
        FOR j FROM 0 TO hatb1len-1 STEP 1  DO
            IF (htab2.get(i)=htab1.get(j)) THEN
                BREAK;
            END_IF
        END_FOR
        IF (j=hatb1len) THEN
            sum:=sum+htab2.get(i);
        END_IF
    END_FOR

    //Display the result 
    Write("The sum of distincts elements of the given sets is :" ,sum);
END