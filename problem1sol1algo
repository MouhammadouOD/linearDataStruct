ALGORITHM problem1sol1
VAR
    set1: ARRAY_OF INTEGER[5];
    set2: ARRAY_OF INTEGER[5];
    sum: INTEGER;
    i,j:INTEGER;

BEGIN
    sum:=0;
    // fill set1
    FOR i FROM 0 TO set1.lenght-1 STEP 1  DO
        Write("give the element in index",i);
        READ(set1[i]);
    END_FOR

    i:=0;
    // fill set2
    FOR i FROM 0 TO set2.lenght-1 STEP 1  DO
        Write("give the element in index",i);
        READ(set2[i]);
    END_FOR

    //lets calculate the sum of distincts elements of the sets

    FOR i FROM 0 TO set1.lenght-1 STEP 1  DO
        FOR j FROM 0 TO set2.lenght-1 STEP 1  DO
            IF (set1[i]=set2[j]) THEN
                BREAK;
            END_IF
        END_FOR
        IF (j=set2.lenght) THEN
            sum:=sum+set1[i];
        END_IF
    END_FOR

    FOR i FROM 0 TO set2.lenght-1 STEP 1  DO
        FOR j FROM 0 TO set1.lenght-1 STEP 1  DO
            IF (set2[i]=set1[j]) THEN
                BREAK;
            END_IF
        END_FOR
        IF (j=set1.lenght) THEN
            sum:=sum+set2[i];
        END_IF
    END_FOR

    //Display the result 
    Write("The sum of distincts elements of the given sets is :" ,sum);
    
END